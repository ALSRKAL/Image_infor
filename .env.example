# Application Settings
APP_TITLE=Image Metadata Viewer
APP_VERSION=2.0.0

# API Settings
UPDATE_CHECK_URL=https://api.example.com/check_updates
API_KEY=your_api_key_here

# UI Settings
DEFAULT_THEME=light
FONT_SIZE=12
FONT_FAMILY=Arial

# File Settings
MAX_RECENT_FILES=10
DEFAULT_SAVE_PATH=~/Downloads

# Cache Settings
CACHE_DIR=~/.cache/image_metadata_viewer
CACHE_EXPIRY_DAYS=7

# Logging Settings
LOG_LEVEL=INFO
LOG_FILE=~/.log/image_metadata_viewer.log

# Feature Flags
ENABLE_DEBUG_MODE=false
ENABLE_EXPERIMENTAL_FEATURES=false

# Performance Settings
MAX_THREADS=4
MEMORY_LIMIT=2048

# Update Settings
CHECK_UPDATES_ON_START=true
UPDATE_CHANNEL=stable

# Localization
DEFAULT_LANGUAGE=en
AVAILABLE_LANGUAGES=en,ar,fr,es

# Security
ENCRYPTION_KEY=your_encryption_key_here
SALT=your_salt_here

# Analytics (Optional)
ANALYTICS_ENABLED=false
ANALYTICS_ID=your_analytics_id_here

# Network Settings
TIMEOUT=5
RETRIES=3

# Storage
MAX_HISTORY_ITEMS=100
MAX_CACHE_SIZE=100MB

# Notifications
NOTIFICATION_DURATION=5000
NOTIFICATION_POSITION=top-right

# Backup Settings
BACKUP_ENABLED=true
BACKUP_INTERVAL=7
BACKUP_RETENTION=30
